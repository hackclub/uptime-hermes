generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  slackId       String   @unique
  teams         Team[]   @relation("TeamCreator")
  teamsMemberOf Team[]   @relation("TeamMembers")
  createdAt     DateTime @default(now())
}

model Team {
  id                Int                 @id @default(autoincrement())
  name              String
  teamCreator       User                @relation("TeamCreator", fields: [teamCreatorId], references: [id])
  teamCreatorId     Int
  usersOnTeam       User[]              @relation("TeamMembers")
  isSingleUserTeam  Boolean             @default(false)
  createdAt         DateTime            @default(now())
  UptimeKumaTracker UptimeKumaTracker[]
}

model UptimeKumaTracker {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  team      Team     @relation(fields: [teamId], references: [id])
  teamId    Int
  createdAt DateTime @default(now())
}
